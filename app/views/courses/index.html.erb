<%= render 'homes/navbar' %>
<div class="container mt-5">
    <h4>ALL COURSES</h4><br>
<% if current_student.role == true%>
    <%= link_to 'CLICK TO FILTER YOUR REGISTER COURSES',new_course_path,class: "btn btn-primary" %> <br><br>
    <table class="table table-bordered text-center">
        <tr>
            <th>Name</th>
            <th colspan=2>Click To Register</th>
            
          

        </tr>
        <% @courses.each do |c|%>
        <tr>
        <td><%= c.name%></td>
        <td colspan=2><%= link_to 'Register Now', edit_course_path(c), class: "btn btn-info" %></td>
        </tr>
        <% end %>
      </table>

<% else %>
    <%= link_to 'ADD NEW COURSE', new_course_path, class: "btn btn-primary" %> <br><br>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th colspan=2>Actions</th>
            
          

        </tr>
        <% @courses.each do |c|%>
        <tr>
        <td><%= c.name%></td>
        <td colspan=2><%= link_to 'Edit', edit_course_path(c), class: "btn btn-info" %><%= button_to 'Delete',  c , method: :delete, class: "btn btn-danger",data: {confirm: "Are you sure?"} %></td>
        </tr>
        <% end %>
      </table>

<% end %>
</div>