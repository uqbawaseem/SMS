        <button class=" nav-link btn btn-primary position-relative pt-0">
        <%= link_to 'Courses', courses_path ,class: "nav-link"%>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        <%= Course.count%>
        <span class="visually-hidden"></span>
        </span>
        </button>
    </li>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <li class="nav-item">
        <%= link_to 'Edit Profile', edit_student_registration_path, class: "nav-link"%>
    </li>
    <li class="nav-item" style="margin-left:74%">
        <%= link_to 'logout', destroy_student_session_path%>
    </li>
    </ul>
