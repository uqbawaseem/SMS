<% if student_signed_in? %>
  <% if current_student.role == "admin" %>
    <ul class="nav nav-pills mt-3">
    <li class="nav-item">
        <%= link_to "#{current_student.name}", root_path ,class: "nav-link text-uppercase text-secondary"%>
    </li>
    <li class="nav-item">
        <button class=" nav-link btn btn-primary position-relative pt-0">
        <%= link_to 'Courses', courses_path ,class: "nav-link"%>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        <%= Course.count%>
        <span class="visually-hidden"></span>
        </span>
        </button>
    </li>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <li class="nav-item">
        <button class=" nav-link btn btn-primary position-relative pt-0">
