        <%= Student.count-1%>
        <span class="visually-hidden"></span>
        </span>
        </button>
    </li>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <li class="nav-item">
        <%= link_to 'Edit Profile', edit_student_registration_path, class: "nav-link"%>
    </li>
    <li class="nav-item" style="margin-left:64%">
        <%= link_to 'logout', destroy_student_session_path, class: "nav-link"%>
    </li>
    </ul>
  <% else %>
