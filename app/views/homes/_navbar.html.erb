<% else %>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link">Stranger</a>
    </li>
    <li class="nav-item" style="margin-left:79%">
      <%= link_to 'Sign up', new_student_registration_path, class: "nav-link"%>
    </li>
      <li class="nav-item">
      <%= link_to 'Sign in', new_student_session_path, class: "nav-link"%>
    </li>
  </ul>
<% end %>
