<%= render 'homes/navbar' %>
<div class="container mt-5">
    <h4>REGISTERED COURSES GRADES</h4><br>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Grade</th>
        </tr>
        <% @registered_courses.each do |reg|%>
        <tr>
            <td>
                <%= reg.course.name%>
            <td>
                <% if reg.grade%>
                <%= reg.grade%>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Edit', edit_registered_course_path(reg), class: "btn btn-info btn-sm", data: {bs_toggle: "modal", bs_target: "#edit", remote: true} %>
                <% else %>
                <strong>You aren't graded yet!</strong>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Edit', edit_registered_course_path(reg), class: "btn btn-info", data: {bs_toggle: "modal", bs_target: "#edit", remote: true} %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="editLabel" aria-hidden="true" role="document">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editLabel">Edit Gardes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <p id="editForm">
      </p>     
    </div>
  </div>
</div>